<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_bootstrap_meta')%>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
      }
  
      .container {
        margin: 5% auto;
        width: 50%;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
      }
  
      h3 {
        font-size: 24px;
        margin-bottom: 20px;
      }
  
      .form-label {
        font-weight: bold;
      }
  
      .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
  
      .btn {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
  
      .btn:hover {
        background-color: #0056b3;
      }
  </style>
  <title>Update Employee</title>
  </head>

  <body>
    <%-include('_header')%>
    <div
      class="w-50 mx-auto mt-5"
      style="
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      "
    >
      <h4>Update Employee</h4>
      <form
        class="w-50 mx-auto mt-2"
        action="/admin/update/<%=user.id%>"
        method="post"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%=user.name%>"
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%=user.email%>"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="text"
            class="form-control"
            id="password"
            name="password"
            value="<%=user.password%>"
          />
        </div>
        <div class="mb-3">
          <label for="admin" class="form-label">Is Admin</label>
          <input
            type="text"
            class="form-control"
            id="admin"
            name="admin"
            value="<%=user.isAdmin%>"
            readonly
          />
        </div>
        <button class="btn btn-primary align-self-center">
          Update Employee
        </button>
      </form>
    </div>
    <%-include('_bootstrap_script')%>
  </body>
</html>