<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_bootstrap_meta')%>
    <style>
        body {
          font-family: Arial, sans-serif;
          background-color: #f0f0f0;
        }
    
        .container {
          margin: 5% auto;
          width: 50%;
          border: 1px solid #333;
          padding: 20px;
          background-color: #fff;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        .form-label {
          font-weight: bold;
        }
    
        .form-control {
          width: 100%;
          padding: 10px;
          margin-bottom: 10px;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
    
        .btn {
          padding: 10px 20px;
          background-color: #007bff;
          color: #fff;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
    
        .btn:hover {
          background-color: #0056b3;
        }
    
        .link {
          margin-left: 20px;
        }
      </style>
    <title>Sign In</title>
  </head>
  <body>
    <%- include('_header')%>
    <div class="w-50 border border-dark mx-auto mt-5">
      <div class="mx-auto mt-3 mb-3" style="width: 200px">
        <h4>Employee Sign In</h4>
      </div>

      <form
        class="w-50 mx-auto"
        action="/employee/create-session"
        method="POST"
      >
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="abc@email.com"
            name="email"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>

        <div style="display: flex; justify-content: center">
          <button type="submit" class="btn btn-primary">Log In</button>
        </div>
      </form>

      <div class="mx-auto mb-3 mt-3" style="width: 300px">
        <a href="/employee/signup" style="margin-left: 90px">Sign Up Instead</a>
      </div>
    </div>
    <%- include('_bootstrap_script')%>
  </body>
</html>